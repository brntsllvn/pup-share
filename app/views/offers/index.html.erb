<div class="col-md-12 text-center bottom-space">
  <h3><%= "#{current_user.first_name}'s " %> Offers</h3>
</div>

<br>

<% if @offers.empty? %>

  <h3>You don't have any offers yet...</h3>
  <div class="col-md-12 bottom-space">
    <%= link_to 'Walk a Pup', walks_path, class:'btn btn-info btn-lg btn-block' %>
  </div>

<% else %>

  <% @offers.each do |offer| %>
    <%= render partial: 'walks/walk', locals: { walk: offer.walk } %>
  <% end %>

<% end %>