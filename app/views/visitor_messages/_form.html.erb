<%= simple_form_for(@visitor_message) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :type, as: :radio_buttons, collection: ['Comment','Bug','Feature Request'], include_blank: false %>
  <%= f.input :message %>
</div>

<div class="form-actions">
  <%= f.button :submit, 'Submit' %>
</div>
<% end %>
