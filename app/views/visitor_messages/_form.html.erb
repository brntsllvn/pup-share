<%= simple_form_for(@visitor_message) do |f| %>
<%= f.error_notification %>

<div class='well col-md-12'>
  <%= f.input :message_type, as: :radio_buttons, collection: @visitor_message.message_types, include_blank: false %>
  <%= f.input :message %>
</div>

<div class="form-actions">
  <%= f.button :submit, 'Submit', class: 'btn btn-success btn-block' %>
</div>
<% end %>
