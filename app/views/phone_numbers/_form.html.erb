<%= simple_form_for [current_user, @phone_number] do |f| %>
<%= f.error_notification %>

<div class="well form-inputs row">

  <div class='col-md-4'>
    <%= f.input :phone_type, as: :radio_buttons, collection: ['Mobile'], include_blank: false, checked: 'Mobile' %>
  </div>
  <div class="col-md-4">
    <%= f.input :number %>
  </div>

</div>

<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-success btn-block'%>
</div>

<% end %>