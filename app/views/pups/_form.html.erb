<%= simple_form_for [current_user, @pup] do |f| %>
<%= f.error_notification %>

<br>

<div class="form-inputs row">
  <div class="col-md-2">
    <%= image_tag @pup.pic, class: 'img-responsive' %>
    <%= f.input :pic %>
  </div>  
  <div class="col-md-4">
    <%= f.input :name %>
    <%= f.input :breed %>
  </div>
  <div class="col-md-4">
    <%= f.input :male_female, as: :radio_buttons, collection: ['M', 'F'], include_blank: false %> 
    <%= f.input :age %>
    <%= f.input :vet_phone %>
    <%= f.input :vet_name %>
    <%= f.input :insurance_provider %>
  </div>
</div>

<div class="form-inputs row">
  <div class="col-md-12">
    <%= f.input :care_instructions %>

  </div>
</div>

<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-success'%>
</div>

<% end %>