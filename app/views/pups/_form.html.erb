<%= simple_form_for [current_user, @pup] do |f| %>
<%= f.error_notification %>

<br>

<div class="form-inputs row">
  <div class="col-md-6">
    <%= f.input :pup_name %>
    <%= f.input :pup_breed %>
    <%= f.input :pup_weight %>
  </div>
  <div class="col-md-6">
    <%= f.input :pup_gender %> 
    <%= f.input :pup_age %>
    <%= f.input :pup_vet_phone %>
  </div>
</div>

<div class="form-inputs row">
  <div class="col-md-12">
    <%= f.input :pup_care_instructions %>
    <%= f.input :pup_pic %>
  </div>
</div>

<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-success'%>
</div>

<% end %>