<%= simple_form_for [current_user, @pup] do |f| %>
<%= f.error_notification %>

<div class="well form-inputs row">

  <div class="col-md-4">
    <%= image_tag @pup.pic, class: 'img-responsive' %>
    <%= f.input :pic %>
  </div>  

  <div class="col-md-8">
    <div class="col-md-4">
      <%= f.input :name %>
    </div>
    <div class="col-md-4">
      <%= f.input :breed %>
    </div>
    <div class="col-md-4">
      <%= f.input :age %>
      <!-- switch this to icon categories -->
    </div>
  </div>

  <div class="col-md-8">
    <div class="col-md-4">
      <strong>* Gender</strong>
      <br><%# fail %><br>
      <%= radio_button_tag 'pup[male_female]', 'm', @pup.male_female == 'm', class: 'required' %>
      <%= male %>
      <br><br>
      <%= radio_button_tag 'pup[male_female]', 'f', @pup.male_female == 'f', class: 'required' %>
      <%= female %>
    </div>

    <div class="col-md-4">
      <strong>* Size</strong>
      <br><br>
      <%= radio_button_tag 'pup[size]', '1', @pup.size == 1, class: 'required' %>
      <%= xsml %>
      <br><br>
      <%= radio_button_tag 'pup[size]', '2', @pup.size == 2, class: 'required' %>
      <%= sml %>
      <br><br>
      <%= radio_button_tag 'pup[size]', '3', @pup.size == 3, class: 'required' %>
      <%= med %>
      <br><br>
      <%= radio_button_tag 'pup[size]', '4', @pup.size == 4, class: 'required' %>
      <%= lrg %>
    </div>

    <div class="col-md-4">
      <strong>* Energy Level</strong> 
      <br><br>
      <%= radio_button_tag 'pup[personality]', 'mellow', @pup.personality == 'mellow', class: 'required' %>
      <%= mellow %>
      <br><br>
      <%= radio_button_tag 'pup[personality]', 'temperate', @pup.personality == 'temperate', class: 'required' %>
      <%= temperate %>
      <br><br>
      <%= radio_button_tag 'pup[personality]', 'energetic', @pup.personality == 'energetic', class: 'required' %>
      <%= energetic %>
    </div>
  </div>

  <div class="col-md-8 col-md-offset-4">
    <%= f.input :additional_info, label: 'Additional Information' %>
  </div>
</div>

<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-success'%>
</div>

<% end %>