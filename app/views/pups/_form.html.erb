<%= simple_form_for [current_user, @pup] do |f| %>
<%= f.error_notification %>

<br>

<div class="form-inputs row">
  <div class="col-md-2">
    <%= image_tag @pup.pup_pic, :class => 'img-responsive' %>
    <%= f.input :pup_pic %>
  </div>  
  <div class="col-md-4">
    <%= f.input :pup_name %>
    <%= f.input :pup_breed %>
    <%= f.input :pup_weight %>
  </div>
  <div class="col-md-4">
    <%= f.input :pup_gender, as: :radio_buttons, collection: ['M', 'F'], include_blank: false %> 
    <%= f.input :pup_age %>
    <%= f.input :pup_vet_phone %>
  </div>
  <div class="col-md-2">
    <%= f.input :spayed_neutered %> 
    <%= f.input :special_needs %> 
  </div>
</div>

<div class="form-inputs row">
  <div class="col-md-12">
    <%= f.input :pup_care_instructions %>

  </div>
</div>

<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-success'%>
</div>

<% end %>