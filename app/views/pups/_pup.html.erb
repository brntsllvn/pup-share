<div class="booyah-box"> 
  <div class="row">
    <div class="col-md-2">  
      <%= image_tag pup.pic, class: 'img-responsive profile-image' %>   
    </div>

    <div class="col-md-5">
      <p><%= "#{pup.name} #{pup.breed}" %></p>
      <p><%= "#{pup.age} years old, #{pup.male_female}" %></p>   
      <p>Vet phone: <%= pup.vet_phone %></p>
      <p>Vet name: <%= pup.vet_name %></p>
      <p>Insured by: <%= pup.insurance_provider %></p>
      <p>Care notes: <%= pup.care_instructions %></p>
    </div>

    <div class="col-md-6">
      <%= link_to 'Edit Pup', edit_user_pup_path(current_user, pup), class: 'btn btn-warning' %>
      <%= link_to 'Destroy Pup', user_pup_path(current_user, pup), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
    </div>
  </div><!-- row -->
</div><!-- booyah-box -->