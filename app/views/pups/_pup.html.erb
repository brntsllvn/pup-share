<div class='row'>
  
  <%= render partial: 'pups/pup_sub', locals: { pup: pup } %>

  <br>
  
  <div class="col-md-10">
    <div class="col-md-10">
      <h4>Additional Info: <%= "#{pup.additional_info}" %></h4>
    </div>

    <div class="col-md-2 pull-right">
      <%= link_to 'Edit', edit_user_pup_path(current_user, pup), class: 'btn btn-warning btn-lg' %>
      <%= link_to user_pup_path(current_user, pup), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-lg' do %>
      <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
      <% end %>
    </div>
  </div>

</div><!-- well -->

<br>