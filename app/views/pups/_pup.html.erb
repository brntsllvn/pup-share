<div class="row">

  <div class="col-md-2">  
    <%= image_tag pup.pic, class: 'img-responsive' %>  
  </div>

  <div class="col-md-10">
    <div class="col-md-3">
      <p><strong><%= "#{pup.name}" %></strong></p>
    </div>
    <div class="col-md-3">
      <p><%= "Walks completed #{pup.walks_completed}" %></p>
    </div>
    <div class="col-md-6"></div>
  </div>

  <div class="col-md-10">
    <div class="col-md-3">
      <p><%= "#{pup.breed}" %></p>
    </div>
    <div class="col-md-3">
      <p><%= "#{pup.age} years old" %></p> 
    </div>
  </div>

  <div class="col-md-10">
    <div class="col-md-1">
      <p><%= gender_icon pup %></p>
    </div>
    <div class="col-md-2">
      <p><%= size_icon pup %></p>
    </div>
    <div class="col-md-2">
      <p><%= energy_icon pup %></p>
    </div>
    <div class="col-md-9"></div>
  </div>

  <div class="col-md-8">
    <div class="col-md-8 well">
      <p>Additional Info: <%= "#{pup.additional_info}" %></p>
    </div>

    <div class="col-md-4">
      <%= link_to 'Edit', edit_user_pup_path(current_user, pup), class: 'btn btn-warning' %>
      <%= link_to user_pup_path(current_user, pup), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' do %>
      <span class="glyphicon glyphicon-remove-sign" aria-hidden="true"></span>
      <% end %>
    </div>
  </div><!-- row -->
</div>

<br>