<h1>My pups</h1>

<%= link_to 'New Pup', new_user_pup_path(current_user), class: 'btn btn-primary' %>
<br>
<br>

<% @pups.each do |pup| %>

<div class="booyah-box">

  <div class="row">
    <div class="col-md-6">
      <p>Name: <%= pup.name %></p>
      <p>Breed: <%= pup.breed %></p>
      <p>Weight: <%= pup.weight %></p>
      <p>Gender: <%= pup.male_female %></p>
      <p>Age: <%= pup.age %></p>    
      <p>Vet phone: <%= pup.vet_phone %></p>
      <p>Vet name: <%= pup.vet_name %></p>
      <p>Insurance: <%= pup.insurance_provider %></p>
      <p>Care notes: <%= pup.care_instructions %></p>
    </div>

    <div class="col-md-6">
      <%= image_tag pup.pic, :class => 'img-responsive' %>
    </div>

  </div>

  <%= link_to 'Edit', edit_user_pup_path(current_user, pup), class: 'btn btn-warning' %>
  <%= link_to 'Destroy', user_pup_path(current_user, pup), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
</div>
<br>
<br>
<% end %>

<br>

