<div class="booyah-box">
  <div class="row">
    <div class="col-md-3">
      <p><strong>Pup Owner</strong></p>
      <%= "#{walk.owner.email}" %>
      <%= image_tag walk.owner.pic, class: 'img-responsive' %>
    </div>

    <div class="col-md-3">
      <p><strong>Pup</strong></p>
      <%= "#{walk.pup.name}" %>
      <%= image_tag walk.pup.pic, class: 'img-responsive' %>
    </div>

    <div class="col-md-3">
      <p><strong>Walk</strong></p>
      <p>Walk Begins: <%= walk.begin_time.to_formatted_s(:long_ordinal) %></p>
      <p>Place: <%= walk.begin_location %></p>
      <p>Walks Ends: <%= walk.end_time.to_formatted_s(:long_ordinal) %></p>
      <p>Place: <%= walk.end_location %></p>

      <% if user_signed_in? %>
      <%= render partial: 'walks/buttons', locals: { walk: walk } %>
      <% else %>
      <%= render partial: 'users/session_buttons' %>
      <% end %>
    </div>

    <div class="col-md-3">
      <p><strong>Walker</strong></p>
      <% if walk.offers.empty? %>
      Nobody yet...
      <%= image_tag "fallback/question_mark.jpg", class: 'img-responsive' %>
      <% elsif !walk.walker.nil? %>
      Hand-picked walker
      <%= walk.walker.email %>
      <%= image_tag walk.walker.pic %>
      <% end %>
    </div>
  </div><!-- row -->
</div><!-- booyah-box -->
<br>