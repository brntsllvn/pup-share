<h1>Pick a pup to take for a walk!</h1>

<div class='col-md-12'>
  <a class="btn btn-primary" role="button" data-toggle="collapse" href="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Filters
  </a>
  <div class="collapse" id="collapseExample">
    <div class="col-md-12 well">
      <!-- TODO: extract to partial -->
      <%= form_tag walks_path, method: :get do %>
      <div class="col-md-12">
        Time
        <br>
        <%= check_box_tag 'today' %>
        <%= label_tag 'today' %>
        <%= check_box_tag 'next_week' %>
        <%= label_tag 'next week?' %>
        <%= check_box_tag 'next_month' %>
        <%= label_tag 'next month?' %>
        <br>
        Location
        <br>
        Pup
        <br>
        Gender
        <%= check_box_tag 'male' %>
        <%= male %>
        <%= check_box_tag 'female' %>
        <%= female %>
        <br>
        Size
        <%= check_box_tag 'xsml' %>
        <%= xsml %>
        <%= check_box_tag 'sml' %>
        <%= sml %>
        <%= check_box_tag 'med' %>
        <%= med %>
        <%= check_box_tag 'lrg' %>
        <%= lrg %>
        <br>
        Energy Level
        <%= check_box_tag 'mellow' %>
        <%= mellow %>
        <%= check_box_tag 'temperate' %>
        <%= temperate %>
        <%= check_box_tag 'energetic' %>
        <%= energetic %>
        <br>
        <%= submit_tag "Go", class: 'btn btn-success btn-md' %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<br><br><br>

<div class='col-md-12'>

  <% @walks.order(:begin_time).each_with_index do |walk, index| %>

  <%= render partial: 'walks/walk', locals: { walk: walk, index: index } %>

  <% end %>

</div>
