<div class='col-md-12 text-center well hidden-xs hidden-sm'>

  <div class='col-md-6'>
    <%= render 'filters' %>
  </div>

  <div class='col-md-6'>
    <%= render 'map' %>
  </div>

</div>


<% if @walks.count > 0 %>
  <h3 class='col-md-12 text-center'><strong><%= "#{@walks.count} upcoming walks" %></strong></h3>

  <% @walks.order(:begin_time).each_with_index do |walk, index| %>
  <%= render partial: 'walks/walk', locals: { walk: walk, index: index } %>
  <% end %>

<% else %>
  <h3>No search results. Try adjusting your filters</h3>
<% end %>
