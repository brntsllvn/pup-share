<div class='col-md-12 text-center well hidden-xs hidden-sm'>

  <div class='col-md-6'>
    <%= render 'filters' %>
  </div>

  <div class='col-md-6'>
    <%= render 'map' %>
  </div>

</div>


<% if @walks.count > 0 %>
<p><strong><%= "#{@walks.count} upcoming walks" %></strong></p>
<% @walks.order(:begin_time).each_with_index do |walk, index| %>

<div class='col-md-6 walk'>
  <%= render partial: 'walks/walk', locals: { walk: walk, index: index } %>
</div>

<% end %>

<% else %>
<h1>No search results. Try adjusting your filters</h1>
<% end %>
