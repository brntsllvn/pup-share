<%= simple_form_for(@contact_form) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :email %>
  <%= f.input :company %>
  <%= f.input :contact_type, as: :radio_buttons, collection: ['Comment','Bug','Feature Request'], include_blank: false %>
  <%= f.input :comment %>
</div>

<div class="form-actions">
  <%= f.button :submit, 'Submit' %>
</div>
<% end %>
