<%= simple_form_for(@user) do |f| %>
<%= f.error_notification %>

<div class="well form-inputs row">

  <div class="col-md-3">
    <%= image_tag @user.image, class: 'img-responsive' %>
  </div>  

  <div class="col-md-6"> 
    <%= f.input :first_name,   disabled: true, hint: 'Edit in Linkedin' %>
    <%= f.input :last_name,    disabled: true, hint: 'Edit in Linkedin' %>
    <%= f.input :email,        disabled: true, hint: 'Edit in Linkedin' %>
    <%= f.input :location,     disabled: true, hint: 'Edit in Linkedin' %>
    <%= f.input :headline,     disabled: true, hint: 'Edit in Linkedin' %>
    <%= f.input :linkedin_url, disabled: true, hint: 'Edit in Linkedin' %>
  </div>

  <div class="col-md-3"> 
    <%= f.input :mobile, hint: 'Format: 555-555-5555' %>   
  </div>
</div>

<div class="form-actions col-md-12">
  <%= f.button :submit, 'Update Profile', class: 'btn btn-success' %>
</div>

<% end %>
