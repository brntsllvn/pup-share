<%= simple_form_for(@user) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">

  <div class="col-md-4">  
    <h2>Profile</h2>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email %>
    <%= f.input :phone, hint: 'Format: 555-555-5555' %>   
    <%= f.input :emergency_phone, hint: 'Format: 555-555-5555' %>
    <%= f.input :building, hint: 'Example: Ruby'%>
    <%= f.input :address %>
  </div>

  <div class="col-md-4">  
    <h2></h2>
    <%= image_tag @user.pic, class: 'img-responsive'  %>
    <%= f.input :pic %>
  </div>

  <div class="col-md-4"> 
    <h2>Pup Preferences</h2>
    <h6>Tell us what types of pups you prefer to walk</h6>
    <strong>Pup Size</strong>
    <%= f.input :small_pups %>
    <%= f.input :medium_pups %>
    <%= f.input :large_pups %>
    <%= f.input :giant_pups %>   
    <strong>Pup Age</strong>
    <%= f.input :puppies %>
    <%= f.input :senior_pups %>
    <strong>Misc.</strong>
    <%= f.input :pups_w_special_needs %>
    <%= f.input :oral_med_admin %>
  </div>
</div>

<div class="form-actions col-md-12">
  <%= f.button :submit, 'Update Profile', class: 'btn btn-success' %>
</div>
<% end %>
