<%= simple_form_for(@user) do |f| %>
<%= f.error_notification %>

<div class="form-inputs">

  <div class="col-md-4">  
    <h2>Profile</h2>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :email, readonly: true %>
    <%= f.input :phone, hint: 'Format: 555-555-5555' %>   
    <%= f.input :emergency_phone, hint: 'Format: 555-555-5555' %>
    <%= f.input :building, hint: 'Example: Ruby'%>
    <%= f.input :address %>
  </div>

  <div class="col-md-4">  
    <h2></h2>
    <%= image_tag @user.pic, class: 'img-responsive'  %>
    <%= f.input :pic %>
  </div>
</div>

<div class="form-actions col-md-12">
  <p><%= link_to 'Change your password', edit_user_registration_path %></p>
  <%= f.button :submit, 'Update Profile', class: 'btn btn-success' %>
</div>
<% end %>
