<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :building %>
    <%= f.input :address %>
    <%= f.input :email %>
    <%= f.input :phone %>
    <%= f.input :emergency_phone %>
    <%= f.input :pic %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
