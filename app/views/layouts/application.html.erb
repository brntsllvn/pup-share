<!DOCTYPE html>
<html>
  <head>
    <title>PupShare</title>
    <%= stylesheet_link_tag     'application', media: 'all' %>
    <%= stylesheet_link_tag     'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.5.0/css/bootstrap-datepicker3.standalone.min.css' %>
    <%= javascript_include_tag 'application' %>
    <%= javascript_include_tag 'https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.5.0/js/bootstrap-datepicker.min.js' %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes" />

  </head>

  <body>

    <!-- start navbar -->
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">

        <div class="navbar-header">

          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
            <span class="sr-only">Toggle Navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <%= link_to 'Pup Share', root_path, class: 'navbar-brand'  %>
        </div> <!-- end div class="navbar-header" -->

        <div class="collapse navbar-collapse" id="navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Walk a Pup', walks_path %>
            <li><%= link_to 'Post a Walk', new_walk_path %>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
            <li><%= link_to 'My Upcoming Walks', user_upcoming_walks_path(current_user) %>
            <li><%= link_to 'Profile & Pups', user_path(current_user) %>
            <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
            <li><%= link_to new_visitor_message_path do %>
              <span class="glyphicon glyphicon-envelope"></span>
              <% end %>

              <% else %>
            <li><%= link_to 'Sign in with Linkedin', "/auth/linkedin" %></li>
            <% end %>
          </ul>
        </div> <!-- end div class="collapse navbar-collapse" -->
      </div><!-- end div .container-fluid -->
    </nav>
    <!-- end navbar -->

    <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <div class="col-md-12 bottom-padding">
      <%= yield %>
    </div>

  </body>
</html>
