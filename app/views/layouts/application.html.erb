<!DOCTYPE html>
<html>
  <head>
    <title>PupShare</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
    <%= csrf_meta_tags %>
  </head>
  <body>

    <!-- start navbar -->
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="navbar-collapse">
            <span class="sr-only">Toggle Navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span> 
          </button>
          <%= link_to 'Pup Share', root_path, class: 'navbar-brand'  %>
        </div> <!-- end div class="navbar-header" -->

        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Walk a Pup', walks_path %>
            <li><%= link_to 'Post a Walk', new_walk_path %>
          </ul>
          <ul class="nav navbar-nav navbar-right"> 
            <% if user_signed_in? %>
            <li><%= link_to 'My Upcoming Walks', user_offers_path(current_user) %> 
            <li><%= link_to 'Profile & Pups', user_path(current_user) %> 
            <li><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></li>
            <% else %>
            <li><%= link_to image_tag('sign_in_w_linkedin.png'), "/auth/linkedin", id: 'nav-sign-in' %></li>
            <% end %>          
          </ul>
        </div> <!-- end div class="collapse navbar-collapse" -->
      </div><!-- end div .container-fluid -->
    </nav> 
    <!-- end navbar -->

    <% if notice.present? %>		
    <p class="alert alert-info"><%= notice %></p>		
    <% end %>		
    <% if alert.present? %>		
    <p class="alert alert-danger"><%= alert %></p>		
    <% end %>

    <div class="row">
      <div class="col-md-1">
      </div>

      <div class="col-md-10">
        <%= yield %>      
      </div>

      <div class="col-md-1">
      </div>     
    </div>

    <br>
    <br>
    <br>

    <div class="navbar navbar-inverse navbar-fixed-bottom" role="navigation">
      <p><%= link_to 'Contact', new_visitor_message_path %></p>      
      <p><%= link_to 'About', about_path %></p>
      <p><%= link_to 'Terms of Service', terms_of_service_path %></p>
      <p><%= link_to 'Privacy Policy', privacy_policy_path %></p>
      <br>
    </div>

  </body>
</html>
