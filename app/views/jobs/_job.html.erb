<div class="booyah-box">
  <div class="row">
    <div class="col-md-3">
      <p><strong>Pup Owner</strong></p>
      <%= "#{job.user.email}" %>
      <%= image_tag job.user.pic, class: 'img-responsive' %>
    </div>

    <div class="col-md-3">
      <p><strong>Pup</strong></p>
      <%= "#{job.pup.pup_name}" %>
      <%= image_tag job.pup.pup_pic, class: 'img-responsive' %>
    </div>

    <div class="col-md-3">
      <p><strong>Walk Details</strong></p>
      <p>Walk Begins: <%= job.drop_off_time.to_formatted_s(:long_ordinal) %></p>
      <p>Place: <%= job.drop_off_location %></p>
      <p>Walks Ends: <%= job.pick_up_time.to_formatted_s(:long_ordinal) %></p>
      <p>Place: <%= job.pick_up_location %></p>

      <% if user_signed_in? %>
      <%= render partial: 'jobs/buttons', locals: { job: job } %>
      <% else %>
      <%= render partial: 'users/session_buttons' %>
      <% end %>
    </div>

    <div class="col-md-3">
      <p><strong>Walker</strong></p>
      <% if job.requests.empty? %>
      Nobody yet...
      <%= image_tag "fallback/question_mark.jpg", class: 'img-responsive' %>
      <% elsif !job.walker.nil? %>
      Hand-picked walker
      <%= job.walker.email %>
      <%= image_tag job.walker.pic %>
      <% end %>
    </div>
  </div><!-- row -->
</div><!-- booyah-box -->
<br>