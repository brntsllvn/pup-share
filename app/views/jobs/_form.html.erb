<%= simple_form_for(@job) do |f| %>
<%= f.error_notification %>

<div class="form-inputs row">
    <div class="col-md-6">
    <%= f.input :pup_name %>
    <%= f.input :pup_breed %>
    <%= f.input :pup_weight %>
  </div>
    <div class="col-md-6">
    <%= f.input :pup_gender %>
    <%= f.input :pup_age %>
    <%= f.input :pup_vet_phone %>
  </div>
</div>
<div class="form-inputs row">
    <div class="col-md-12">
      <%= f.input :pup_care_instructions %>
  </div>
</div>
<div class="form-inputs row">
  <div class="col-md-6">
    <%= f.input :drop_off_location %>
    <%= f.input :drop_off_time %>
  </div>
  <div class="col-md-6">
    <%= f.input :pick_up_location %>
    <%= f.input :pick_up_time %>
  </div>
</div>

<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-success'%>
</div>

<% end %>




