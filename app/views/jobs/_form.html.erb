<%= simple_form_for(@job) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :job_type %>
    <%= f.input :drop_off_time %>
    <%= f.input :drop_off_location %>
    <%= f.input :pick_up_time %>
    <%= f.input :pick_up_location %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
