<%= simple_form_for(@job) do |f| %>
<%= f.error_notification %>

<br>

<div class="form-inputs row">
  <div class="col-md-6">
    <%= f.association :pup, as: :radio_buttons, label_method: :pup_name, 
collection: current_user.pups, include_blank: false %>
  </div>
</div>

<div class="form-inputs row">
  <div class="col-md-3">
    <%= f.input :drop_off_location %>
    <%= f.input :drop_off_time, ampm: true, minute_step: 15 %>
  </div>
  <div class="col-md-3">
    <%= f.input :pick_up_location %>
    <%= f.input :pick_up_time, ampm: true, minute_step: 15 %>
  </div>
</div>

<div class="form-actions">
  <%= f.button :submit, class: 'btn btn-success'%>
</div>

<% end %>




