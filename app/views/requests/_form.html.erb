<%= simple_form_for [current_user, @request] do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :user_id %>
    <%= f.input :requested_of_user_id %>
    <%= f.input :status %>
    <%= f.input :job_id %>
    <%= f.input :availability_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
